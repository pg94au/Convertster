<Window x:Class="ImageConverterNet.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blinkenlights Image Converter" Height="160" Width="480"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="ConvertingFilesText" FontSize="14" Margin="0,0,0,10"></TextBlock>
            <ProgressBar x:Name="ConversionProgressBar" Height="20" Minimum="0" Maximum="100" />
            <TextBlock x:Name="CurrentFileNameText" Margin="0,10,0,0"></TextBlock>
        </StackPanel>
    </Grid>
</Window>