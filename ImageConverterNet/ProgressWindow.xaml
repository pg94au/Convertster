<Window x:Class="ImageConverterNet.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blinkenlights Image Converter" Width="480"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="ConvertingFilesText" FontSize="14" Margin="0,0,0,10"></TextBlock>
            <ProgressBar x:Name="ConversionProgressBar" Height="20" Minimum="0" Maximum="100" />
            <TextBlock x:Name="CurrentFileNameText" FontSize="14" Margin="0,10,0,0"></TextBlock>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" HorizontalAlignment="Center" Margin="0,12,0,0" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>